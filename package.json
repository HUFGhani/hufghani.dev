{
	"name": "new.hufghani.dev",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"prepare": "svelte-kit sync && husky install",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"cm": "cz",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest src --config jest.config.json",
		"test:watch": "NODE_OPTIONS=--experimental-vm-modules jest src --config jest.config.json --watch"
	},
	"devDependencies": {
		"@babel/core": "^7.14.0",
		"@babel/preset-env": "^7.14.0",
		"@commitlint/cli": "^17.0.2",
		"@sveltejs/adapter-auto": "1.0.0-next.52",
		"@sveltejs/kit": "1.0.0-next.354",
		"@tailwindcss/typography": "^0.5.2",
		"@testing-library/jest-dom": "^5.14.0",
		"@testing-library/svelte": "^3.0.0",
		"@types/jest": "^28.1.3",
		"@types/testing-library__jest-dom": "^5.14.5",
		"@typescript-eslint/eslint-plugin": "^5.29.0",
		"@typescript-eslint/parser": "^5.29.0",
		"autoprefixer": "^10.4.7",
		"babel-jest": "^28.1.1",
		"commitizen": "^4.2.4",
		"commitlint-config-gitmoji": "^2.2.5",
		"cz-customizable": "^6.3.0",
		"eslint": "^8.18.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.0",
		"jest": "^28.1.1",
		"jest-environment-jsdom": "^28.1.1",
		"postcss": "^8.4.14",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.5.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.2.6",
		"svelte-jester": "^2.0.1",
		"svelte-meta-tags": "^2.6.1",
		"svelte-preprocess": "^4.10.7",
		"tailwindcss": "^3.1.4",
		"ts-jest": "^28.0.5",
		"tslib": "^2.3.1",
		"typescript": "~4.7.4"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-customizable"
		},
		"cz-customizable": {
			"config": "./.cz-config.cjs"
		}
	},
	"dependencies": {
		"daisyui": "^2.17.0"
	}
}
